<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="color_transparent">#00000000</color>
    <declare-styleable name="roundedView"><attr format="dimension" name="rounded_radius"/></declare-styleable>
    <string name="app_name">LoadView</string>
    <style name="Loading_Dialog">
        <item name="android:windowExitAnimation">@anim/anim_alpha_out</item>
    </style>
    <style name="custom_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有title -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>